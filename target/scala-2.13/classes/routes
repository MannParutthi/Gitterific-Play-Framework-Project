# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index(request: Request)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET     /git/:name                  controllers.HomeController.getUserProfile(name: String)

GET 	/userData/:userName			controllers.UserDataController.getUserData(userName: String)
GET 	/topicData/:topic			controllers.TopicDataController.getTopicData(topic: String)

GET		/repoData/:userName			controllers.RepoDataController.getRepoData(request: Request, userName: String)

GET		/searchResult				controllers.HomeController.getSearchResults(request: Request)
